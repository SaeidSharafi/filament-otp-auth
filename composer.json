{
    "name": "saeidsharafi/filament-otp-auth",
    "description": "A Filament plugin for user login using email/phone and OTP verification.",
    "keywords": [
        "laravel",
        "filament",
        "login",
        "otp",
        "authentication",
        "sms",
        "email"
    ],
    "homepage": "https://github.com/saeidsharafi/filament-otp-auth",
    "license": "MIT",
    "authors": [
        {
            "name": "Saeid Sharafi",
            "email": "saeidsharafi263@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^3.0",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/notifications": "^10.0|^11.0|^12.0",
        "illuminate/validation": "^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.15"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Saeidsharafi\\FilamentOtpAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Saeidsharafi\\FilamentOtpAuth\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Saeidsharafi\\FilamentOtpAuth\\FilamentOtpAuthServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
